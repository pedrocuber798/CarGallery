@using CarGallery.Model
@model List<Brand>

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        Gallery
    </a>

    <ul class="dropdown-menu">
        @foreach (var item in Model) {
            <li><a asp-controller="car" asp-action="list" asp-route-brand="@item.Name" class="dropdown-item">@item.Name</a></li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="car" asp-action="list" class="dropdown-item">Todos os carros</a>
        </li>
        <li class="divider"></li>
        <li>
            <a asp-controller="car" asp-action="Add" class="dropdown-item">Adicionar novo carro</a>
        </li>
    </ul>
</li>
