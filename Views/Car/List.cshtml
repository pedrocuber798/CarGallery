@using CarGallery.ViewModel
@model CarListViewModel

<h1>@Model.BrandName</h1>
@foreach (var car in Model.Cars){
    <div class="col-sm-6 col-lg-6 col-md-6">
        <div class="thumbnail">
            <img src="@car.ThumbnailUrl" alt="" class="img-responsive" />
            <div class="caption">
                <h3>
                    <a asp-controller="car" asp-action="Details" asp-route-id="@car.Id">@car.Name</a>
                </h3>
                <p>@car.ShortDescription</p>
            </div>
        </div>
    </div>
}